<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_black_1000"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@mipmap/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/home_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/homeText"
            style="@style/TextView.GuillotineItem"
            android:text="Home" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/events_group"
        style="@style/LinearLayout.GuillotineItem"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/eventsText"
            style="@style/TextView.GuillotineItem"
            android:text="Events" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/encore_group"
        style="@style/LinearLayout.GuillotineItem"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/encoreText"
            style="@style/TextView.GuillotineItem"
            android:text="enCOÐ¯E" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_group"
        style="@style/LinearLayout.GuillotineItem"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/contactText"
            style="@style/TextView.GuillotineItem"
            android:text="Contact Us" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_group"
        style="@style/LinearLayout.GuillotineItem"
        android:clickable="true"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/aboutText"
            style="@style/TextView.GuillotineItem"
            android:text="About Us" />
    </LinearLayout>
</LinearLayout>