<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

               <ImageView
            android:id="@+id/core"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="40dp"
            android:src="@mipmap/corelogo"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/aboutCore2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/core"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Computer Obsessed Radical Enthusiasts, is the computer and technology club of Delhi Public School, Dwarka.  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/md_black_1000" />

        <in.raveesh.customtype.TextView
            android:id="@+id/codeIsPoetry"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:text="Code is Poetry"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff9000"
            android:textStyle="bold"
            android:layout_margin="40dp"
            app:typeface="fonts/Molengo-Regular.ttf" />
    </LinearLayout>
</ScrollView>